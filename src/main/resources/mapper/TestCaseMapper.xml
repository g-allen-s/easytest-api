<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.my.easytest.dao.TestCaseMapper" >
  <resultMap id="BaseResultMap" type="com.my.easytest.entity.TestCase" >
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="case_data" property="caseData" jdbcType="VARCHAR" />
    <result column="case_name" property="caseName" jdbcType="VARCHAR" />
    <result column="remark" property="remark" jdbcType="VARCHAR" />
    <result column="del_flag" property="delFlag" jdbcType="TINYINT" />
    <result column="create_user_id" property="createUserId" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>

  <select id="count" resultType="int">
    select count(1) from test_case htc where htc.create_user_id =  #{params.createUserId}

    <if test="params.caseName != null and params.caseName != '' ">
      and htc.case_name like concat('%', #{params.caseName}, '%')
    </if>
    and htc.del_flag = 1

  </select>

  <select id="list" resultType="TestCase">
    select * from test_case htc where htc.create_user_id =  #{params.createUserId}

    <if test="params.caseName != null and params.caseName != '' ">
      and htc.case_name like concat('%', #{params.caseName}, '%')
    </if>
    and htc.del_flag = 1
    order by htc.id desc
    limit #{pageNum}, #{pageSize}
  </select>

</mapper>